<?xml version="1.0" encoding="UTF-8"?>
<project name="custom_rules">

    <include file="../global_properties.xml" />		
    
    <target name="-post-build">
		<scp 
			file="${out.final.file}" 
			todir="${fiatlux.apk.deploy.path}" 
			trust="true"
			username="${fiatlux.deploy.user}"
			keyfile="${fiatlux.key.file}"
			passphrase="${fiatlux.key.file.pass}"
		/>
    </target>
    
    <target name="-pre-build">
		<javac 
		    srcdir="${fiatlux.domain.src.dir}" 
		    destdir="${out.classes.absolute.dir}" 
		    includeantruntime="false" 
			classpathref="fiatlux.classpath"		    
		    debug="false"
	    />    
    </target>  
</project>
